{
    "name": "kranack/lint-tool",
    "description": "Lint Tool CLI",
	"type": "project",
	"license": "MIT",
	"authors": [
        {
            "name": "Damien Calesse",
            "email": "damien.calesse@gmail.com"
        }
	],
	"bin": [ "lint-tool" ],
	"scripts": {
		"test": "phpunit --colors=always --no-coverage test"
	},
    "require": {
        "php": "^7.3",
        "symfony/console": "^4.3",
        "barryvdh/composer-cleanup-plugin": "^0.2.0",
        "phar-io/version": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "mikey179/vfsstream": "^1.6",
        "mockery/mockery": "^1.3"
    },
	"autoload": {
		"psr-4": {
			"kranack\\Lint\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"kranack\\Lint\\Test\\": "test/"
		}
	}
}
