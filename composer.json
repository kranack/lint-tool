{
    "name": "kranack/lint-tool",
    "description": "Lint Tool CLI",
	"type": "project",
	"license": "MIT",
	"authors": [
        {
            "name": "Damien Calesse",
            "email": "damien.calesse@gmail.com"
        }
	],
	"bin": [ "lint-tool" ],
	"scripts": {
		"test": "phpunit --colors=always --no-coverage test",
		"analyse": "phpstan analyse src test --level 6",
		"infection": "XDEBUG_MODE=coverage infection --threads=4 --only-covered"
	},
    "require": {
		"php": "^7.4",
		"php-parallel-lint/php-parallel-lint": "^1.1",
        "symfony/console": "^4.3",
        "phar-io/version": "^2.0",
        "barryvdh/composer-cleanup-plugin": "dev-fix/composer-update"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mikey179/vfsstream": "^1.6",
        "mockery/mockery": "^1.3",
        "phpstan/phpstan": "^0.12.4",
        "infection/infection": "^0.15.0",
        "phpstan/phpstan-mockery": "^0.12.2",
        "phpstan/extension-installer": "^1.0"
    },
	"autoload": {
		"psr-4": {
			"kranack\\Lint\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"kranack\\Lint\\Test\\": "test/"
		}
	},
	"repositories": [
		{
			"type": "git",
			"url": "https://github.com/kranack/composer-cleanup-plugin.git"
		}
	],
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "phpstan/extension-installer": true,
            "ocramius/package-versions": true,
            "barryvdh/composer-cleanup-plugin": true
        }
    }
}
